{
    "homepage": "https://www.retroarch.com/",
    "description": "Frontend for emulators, game engines and media players.",
    "license": "GPL-3.0-only",
    "version": "1.7.9",
    "architecture": {
        "64bit": {
            "url": "https://buildbot.libretro.com/stable/1.7.9/windows/x86_64/RetroArch.7z",
            "hash": "2a257646e8600f95c8c90527349732825da58e2a71128c06da9adf796880db5d"
        },
        "32bit": {
            "url": "https://buildbot.libretro.com/stable/1.7.9/windows/x86/RetroArch.7z",
            "hash": "6214f7b0f20e842156e993cbf5c70e84626e38ca723545dc84aeaf3e8283fe3d"
        }
    },
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\\retroarch.cfg\")) {",
        "    New-Item \"$dir\\retroarch.cfg\" -Type File | Out-Null",
        "}"
    ],
    "bin": [
        [
            "retroarch.exe",
            "retroarch"
        ]
    ],
    "shortcuts": [
        [
            "retroarch.exe",
            "RetroArch"
        ]
    ],
    "persist": [
        "assets\\wallpapers",
        "cores",
        "cheats",
        "overlays",
        "playlists",
        "records",
        "recordings",
        "saves",
        "screenshots",
        "states",
        "system",
        "thumbnails",
        "retroarch.cfg"
    ],
    "checkver": {
        "url": "https://www.retroarch.com/?page=platforms",
        "regex": "The current stable version is: (?<main>[\\d.]+)(\\s*\\((\\w+)\\))?*</p>",
        "replace": "${3}${2}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://buildbot.libretro.com/stable/$matchMain/windows/x86_64/RetroArch.7z"
            },
            "32bit": {
                "url": "https://buildbot.libretro.com/stable/$matchMain/windows/x86/RetroArch.7z"
            }
        }
    }
}
